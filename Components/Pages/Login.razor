@page "/login"
@using System.ComponentModel.DataAnnotations

<PageTitle>Login</PageTitle>

<h3>Login</h3>

<EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label for="username">Username:</label>
        <InputText id="username" @bind-Value="loginModel.Username" />
    </div>
    <div>
        <label for="password">Password:</label>
        <InputText id="password" type="password" @bind-Value="loginModel.Password" />
    </div>
    <button type="submit">Login</button>
</EditForm>

@code {
    private LoginModel loginModel = new LoginModel();

    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private async Task HandleLogin()
    {
        // Call the authentication service to validate the user
        // and obtain a JWT token
        // If successful, redirect to the home page or another protected page
        NavigationManager.NavigateTo("/");
    }

    public class LoginModel
    {
        [Required]
        public string Username { get; set; }

        [Required]
        public string Password { get; set; }
    }
}
